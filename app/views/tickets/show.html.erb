<div id='ticket'>
  <h2><%= @ticket.title %></h2>
  <span id='author'><small>Created by <%= @ticket.user.email %></small></span>
  <%= simple_format(@ticket.description) %>
  <% if @ticket.asset.exists? %>
    <h3Attached File</h3>
    <div class="asset">
      <p>
        <%= link_to File.basename(@ticket.asset.path), @ticket.asset.url %>
      </p>
      <p><small><%= number_to_human_size(@ticket.asset.size) %>
    </div>
  <% end %>
  <br>
  <% authorized?("edit tickets", @project) do %>
    <%= link_to "Edit Ticket", [:edit, @project, @ticket] %>
  <% end %>
  <br>
  <% authorized?("delete tickets", @project) do %>
    <%= link_to "Delete Ticket", [@project, @ticket], :method => :delete,
                 :confirm => "Are you sure you want to delete tis ticket?" %>
  <% end %>
  <br>
  <%= simple_format(@ticket.description) %>
</div>
